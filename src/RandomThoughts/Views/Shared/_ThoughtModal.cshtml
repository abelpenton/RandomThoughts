@using RandomThoughts.Domain.Enums

@{
    Dictionary<int, string> moods = new Dictionary<int, string>();
    foreach( ThinkerMood foo in Enum.GetValues(typeof(ThinkerMood)) )
    {
        moods.Add((int)foo, foo.ToString());
    }
    if (!ViewData.ContainsKey("HoleId"))
    {
        ViewData["HoleId"] = 1;
    }
}

<div id="thought-display-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h1 class="modal-title">Modal title</h1>
          
          <div class="panel-heading">
              <span class="thought-title">
                  <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
              </span>
              <span class="thought-action-container pull-right">
                  <p style="font-style: italic;" id="data-thought"> </p>
              </span>
          </div>
          
      </div>
      <div class="modal-body">
        <p style=" color:gray; text-align: center;text-align: center;font-family: initial;font-size: 2em;font-style: oblique;">One fine body&hellip;</p>
      </div>
      <div style="margin-left: 0.5cm;" id="new-comment">
        <h2>Add a Comment</h2>
         <p></p>
        <img src="~/images/default-avatar-2.jpg" style="display:inline-block; width: 3%; border-radius: 50%;"/>
        <textarea id="comment-body" style="border-style: double;margin-right: 50cm;width: 50%;border-radius: 5px;display: inline-block;" type="text" placeholder="Enter a Comment ..."></textarea>
        <button id="add-new-comment" type="button" class="btn btn-success">Save</button>
      </div>        
        <h2>Comments</h2>
      <div style="margin-left: 0.5cm;max-width: 300%;" id="comment-details" class="modalCommentTitle">
        
        <span class="thought-action-container pull-right">
            
        </span>
       </div>
       
        <div class="modalComment-body">
            <p></p>
        </div>
            <div id="thought-inner-container" class="modal-footer">
               
            </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- TODO: Add the mood selector element -->
<div id="thought-edit-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <input type="text" style="display: none;" name="Id" id="thought-id" value="">
      @if (ViewData.ContainsKey("HoleId"))
      {
            <input type="text" style="display: none;" name="ThoughtHoleId" id="thoughtHole-id" value="@(ViewData["HoleId"])">
      }
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit your Thought</h4>

          <div class="panel-heading">
              <span class="thought-title">
                  <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
              </span>
              <span class="thought-action-container pull-right">
                  <p style="font-style:italic;" id="data-thought"> </p>
              </span>
          </div>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label for="thought-title">Title</label>
            <input type="text" class="form-control" id="thought-title" name="Title">
        </div>
          <div class="form-group">
              <label for="thought-body">Your Thought</label>
              <textarea rows="5" type="text" class="form-control" id="thought-body" name="Body"></textarea>
          </div>
          <div class="form-group">
              <label for="thought-body">Mood</label> 
              <select name="Mood" id="thought-mood" class="form-control">
                  @foreach (var mood in moods)
                  {
                      <option value="@mood.Key">@mood.Value</option>
                  }
              </select>
          </div>
      </div>
      <div class="modal-footer">
        <button id="save-thought-btn" type="button" class="btn btn-success">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<div id="thought-create-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <input type="text" style="display: none;" name="Id" id="thought-id" value="">
            @if (ViewData.ContainsKey("HoleId"))
            {
                <input type="text" style="display: none;" name="ThoughtHoleId" id="thoughtHole-id" value="@(ViewData["HoleId"])">
            }
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create a random Thought!!!</h4>

            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="thought-title">Title</label>
                    <input type="text" class="form-control" id="thought-title" name="Title">
                </div>
                
                <div class="form-group">
                    <label for="thought-body">Your Thought</label>
                    <textarea rows="5" type="text" class="form-control" id="thought-body" name="Body"></textarea>
                </div>
                <div class="form-group">
                    <label for="thought-body">Mood</label>
                    <select name="Mood" id="thought-mood" class="form-control">
